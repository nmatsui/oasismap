            "name": "AuthGeneral",
            "priority": 10,
            "ruleType": "MatchRule",
            "action": "Allow",
            "matchConditions": [
              {
                "matchVariables": [
                  {
                    "variableName": "RequestUri"
                  }
                ],
                "operator": "BeginsWith",
                "negationConditon": false,
                "matchValues": [
                  "/api/auth/callback/general-user-keycloak-client"
                ],
                "transforms": [
                  "Lowercase"
                ]
              },
              {
                "matchVariables": [
                  {
                    "variableName": "QueryString"
                  }
                ],
                "operator": "Contains",
                "negationConditon": false,
                "matchValues": [
                  "[format('iss=https://keycloak.{0}/realms/oasismap', parameters('rootDomain'))]"
                ],
                "transforms": [
                  "UrlDecode",
                  "Lowercase"
                ]
              }
            ],
            "state": "Enabled"
          },
          {
